<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.nepu.playtogether.ExtensionActivity"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ExtensionActivity"
        android:background="#fff">

        <LinearLayout
            android:transitionName="head_bg"
            android:gravity="center"
            android:id="@+id/head_layout"
            android:background="@drawable/bg_color1"
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginBottom="20dp"
                android:textColor="#fff"
                android:textSize="35sp"
                android:text="@{data.extension.name}"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:layout_marginBottom="20dp"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:text="ID号:"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
                <TextView
                    android:layout_marginBottom="20dp"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:text="@{String.valueOf(data.extension.ID)}"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="160dp"
            android:layout_alignParentBottom="true"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_width="match_parent">

            <LinearLayout
                android:background="@drawable/half_core"
                android:layout_height="100dp"
                android:layout_width="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"
                        android:text="发起人"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <TextView
                        android:textSize="16sp"
                        android:text="@{data.extension.originator}"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"
                        android:text="活动时间"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <TextView
                        android:textSize="16sp"
                        android:text="@{data.extension.startTime}"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"
                        android:text="活动地点"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <TextView
                        android:textSize="16sp"
                        android:text="@{data.extension.location}"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"
                        android:text="参与人数"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <TextView
                        android:textSize="16sp"
                        android:text="@{String.valueOf(data.extension.number)}"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="#fff"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_width="match_parent">

                <TextView
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:text="活动成员"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/member_list"
                    android:layout_marginBottom="70dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_but"
            android:layout_alignParentBottom="true"
            android:layout_height="70dp"
            android:layout_width="match_parent">

            <Button
                android:onClick="onJoinExtension"
                android:id="@+id/join_but"
                android:layout_margin="10dp"
                android:background="@drawable/login_button"
                android:textSize="18sp"
                android:text="加入活动"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/chat_but"
                android:enabled="false"
                android:onClick="onEnterChatRoomClick"
                android:layout_margin="10dp"
                android:background="@drawable/colorful_button_selector"
                android:textSize="18sp"
                android:text="进入群聊"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </LinearLayout>


    </RelativeLayout>
</layout>