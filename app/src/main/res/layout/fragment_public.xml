<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            type="fragment.PublicFragment"
            name="data"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/public_bg"
        tools:context="fragment.PublicFragment">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
                android:onClick="@{data.OnBackClick}"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_height="50dp"
                android:layout_width="50dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_layout"
            android:layout_alignParentBottom="true"
            android:layout_height="350dp"
            android:layout_width="300dp">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <EditText
                    android:text="@={data.mViewModel.extensionName}"
                    android:theme="@style/MyEditText"
                    android:layout_margin="10dp"
                    android:hint="请输入活动名称"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColorHint="@color/light_gray"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_height="45dp"
                    android:layout_width="200dp" />
                <EditText
                    android:text="@={data.mViewModel.extensionDate}"
                    android:theme="@style/MyEditText"
                    android:layout_margin="10dp"
                    android:hint="请输入活动时间"
                    android:inputType="datetime"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColorHint="@color/light_gray"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_height="45dp"
                    android:layout_width="match_parent" />

                <EditText
                    android:text="@={data.mViewModel.extensionPlace}"
                    android:theme="@style/MyEditText"
                    android:layout_margin="10dp"
                    android:hint="请输入活动地点"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColorHint="@color/light_gray"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_height="45dp"
                    android:layout_width="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="end"
            android:layout_margin="50dp"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <Button
                android:onClick="@{data::onExtensionCreate}"
                android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:text="发起活动"
                android:background="@drawable/login_button"
                android:layout_height="55dp"
                android:layout_width="250dp" />
        </LinearLayout>
    </RelativeLayout>
</layout>
